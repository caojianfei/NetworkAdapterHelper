<Window x:Class="NetworkAdapterHelper.HotkeyInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="设置快捷键" 
        Height="280" 
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
        ShowInTaskbar="False">
    
    <Window.Resources>
        <!-- 现代按钮样式 -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#106EBE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#F3F2F1"/>
            <Setter Property="Foreground" Value="#323130"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#D2D0CE"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EDEBE9"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#E1DFDD"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock Grid.Row="0" 
                   Text="请按下要设置的快捷键组合"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Margin="0,0,0,15"
                   HorizontalAlignment="Center"/>

        <!-- 快捷键显示区域 -->
        <Border Grid.Row="1"
                Background="#F8F9FA"
                BorderBrush="#DEE2E6"
                BorderThickness="2"
                CornerRadius="6"
                Padding="20"
                MinHeight="80"
                Margin="0,5,0,5">
            <TextBlock x:Name="HotkeyDisplay"
                       Text="等待输入..."
                       FontSize="18"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Foreground="#495057"/>
        </Border>

        <!-- 提示信息 -->
        <TextBlock Grid.Row="2"
                   Text="支持的修饰键: Ctrl, Alt, Shift, Win"
                   FontSize="12"
                   Foreground="#6C757D"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,15"/>

        <!-- 按钮区域 -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Button x:Name="OkButton"
                    Content="确定"
                    Style="{StaticResource ModernButtonStyle}"
                    Click="OkButton_Click"
                    IsEnabled="False"
                    MinWidth="80"/>
            <Button x:Name="ClearButton"
                    Content="清除"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Click="ClearButton_Click"
                    MinWidth="80"/>
            <Button x:Name="CancelButton"
                    Content="取消"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Click="CancelButton_Click"
                    IsCancel="True"
                    MinWidth="80"/>
        </StackPanel>
    </Grid>
</Window>