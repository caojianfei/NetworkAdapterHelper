<Window x:Class="NetworkAdapterHelper.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetworkAdapterHelper"
        mc:Ignorable="d"
        Title="设置 - 网络适配器助手" 
        Height="700" 
        Width="800"
        MinHeight="600"
        MinWidth="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Icon="Resources/app.ico"
        Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}">

    <Window.Resources>
        <!-- 样式定义 -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF106EBE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF005A9E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#FFE1E1E1"/>
                                <Setter Property="Foreground" Value="#FF717171"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#FF6C757D"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF5A6268"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF495057"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#FFDC3545"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFC82333"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FFBD2130"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="GroupBoxHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#FF0078D4"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- 转换器 -->
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <Border Grid.Row="0" Background="#FF0078D4" Padding="16,12">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="⚙️" FontSize="20" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBlock Text="设置" 
                         FontSize="18" 
                         FontWeight="SemiBold" 
                         Foreground="White" 
                         VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- 主内容区域 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="16">
            <StackPanel>
                
                <!-- 适配器切换配置 -->
                <GroupBox Header="适配器切换配置" Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="配置两个网络适配器进行互斥切换" 
                                 FontSize="12" 
                                 Foreground="Gray" 
                                 Margin="0,0,0,8"/>

                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- 适配器A -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="适配器 A" Style="{StaticResource GroupBoxHeaderStyle}"/>
                                <ComboBox ItemsSource="{Binding AvailableAdapters}"
                                        SelectedItem="{Binding SelectedAdapterA}"
                                        DisplayMemberPath="Name"
                                        Height="32"
                                        Margin="0,0,0,8"/>
                                <TextBlock Text="{Binding SelectedAdapterA.Description}" 
                                         FontSize="11" 
                                         Foreground="Gray" 
                                         TextWrapping="Wrap"
                                         MaxHeight="40"/>
                            </StackPanel>

                            <!-- 适配器B -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="适配器 B" Style="{StaticResource GroupBoxHeaderStyle}"/>
                                <ComboBox ItemsSource="{Binding AvailableAdapters}"
                                        SelectedItem="{Binding SelectedAdapterB}"
                                        DisplayMemberPath="Name"
                                        Height="32"
                                        Margin="0,0,0,8"/>
                                <TextBlock Text="{Binding SelectedAdapterB.Description}" 
                                         FontSize="11" 
                                         Foreground="Gray" 
                                         TextWrapping="Wrap"
                                         MaxHeight="40"/>
                            </StackPanel>
                        </Grid>

                        <Button Content="刷新适配器列表" 
                                Command="{Binding RefreshAdaptersCommand}"
                                Style="{StaticResource SecondaryButtonStyle}"
                                HorizontalAlignment="Left"
                                Padding="12,8"/>
                    </StackPanel>
                </GroupBox>

                <!-- 快捷键配置 -->
                <GroupBox Header="快捷键配置" Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="配置全局快捷键以快速执行操作" 
                                 FontSize="12" 
                                 Foreground="Gray" 
                                 Margin="0,0,0,8"/>

                        <!-- 启用所有适配器快捷键 -->
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="启用所有适配器:" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1" 
                                   Text="{Binding EnableAllHotkeyText}" 
                                   IsReadOnly="True" 
                                   Height="32" 
                                   VerticalContentAlignment="Center"
                                   Margin="8,0"/>
                            <Button Grid.Column="2" 
                                  Content="设置" 
                                  Command="{Binding SetEnableAllHotkeyCommand}"
                                  CommandParameter="enableall"
                                  Style="{StaticResource SecondaryButtonStyle}"
                                  Width="60"
                                  Padding="8,6"/>
                            <Button Grid.Column="3" 
                                  Content="清除" 
                                  Command="{Binding ClearHotkeyCommand}"
                                  CommandParameter="enableall"
                                  Style="{StaticResource DangerButtonStyle}"
                                  Width="60"
                                  Padding="8,6"/>
                        </Grid>

                        <!-- 禁用所有适配器快捷键 -->
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="禁用所有适配器:" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1" 
                                   Text="{Binding DisableAllHotkeyText}" 
                                   IsReadOnly="True" 
                                   Height="32" 
                                   VerticalContentAlignment="Center"
                                   Margin="8,0"/>
                            <Button Grid.Column="2" 
                                  Content="设置" 
                                  Command="{Binding SetDisableAllHotkeyCommand}"
                                  CommandParameter="disableall"
                                  Style="{StaticResource SecondaryButtonStyle}"
                                  Width="60"
                                  Padding="8,6"/>
                            <Button Grid.Column="3" 
                                  Content="清除" 
                                  Command="{Binding ClearHotkeyCommand}"
                                  CommandParameter="disableall"
                                  Style="{StaticResource DangerButtonStyle}"
                                  Width="60"
                                  Padding="8,6"/>
                        </Grid>

                        <!-- 切换适配器快捷键 -->
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="切换适配器:" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1" 
                                   Text="{Binding SwitchAdaptersHotkeyText}" 
                                   IsReadOnly="True" 
                                   Height="32" 
                                   VerticalContentAlignment="Center"
                                   Margin="8,0"/>
                            <Button Grid.Column="2" 
                                  Content="设置" 
                                  Command="{Binding SetSwitchAdaptersHotkeyCommand}"
                                  CommandParameter="switch"
                                  Style="{StaticResource SecondaryButtonStyle}"
                                  Width="60"
                                  Padding="8,6"/>
                            <Button Grid.Column="3" 
                                  Content="清除" 
                                  Command="{Binding ClearHotkeyCommand}"
                                  CommandParameter="switch"
                                  Style="{StaticResource DangerButtonStyle}"
                                  Width="60"
                                  Padding="8,6"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <!-- 应用程序设置 -->
                <GroupBox Header="应用程序设置" Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <CheckBox Content="开机自启动" 
                                IsChecked="{Binding Configuration.StartWithWindows}"
                                FontSize="14"
                                Margin="0,0,0,8"/>
                        
                        <CheckBox Content="最小化到系统托盘" 
                                IsChecked="{Binding Configuration.MinimizeToTray}"
                                FontSize="14"
                                Margin="0,0,0,8"/>
                        
                        <CheckBox Content="关闭时最小化到托盘" 
                                IsChecked="{Binding Configuration.MinimizeToTrayOnClose}"
                                FontSize="14"
                                Margin="0,0,0,8"/>
                        
                        <CheckBox Content="显示通知" 
                                IsChecked="{Binding Configuration.ShowNotifications}"
                                FontSize="14"
                                Margin="0,0,0,8"/>
                        
                        <CheckBox Content="启用日志记录" 
                                IsChecked="{Binding Configuration.EnableLogging}"
                                FontSize="14"
                                Margin="0,0,0,8"/>

                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock Text="刷新间隔 (秒):" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBox Text="{Binding Configuration.RefreshInterval}" 
                                   Width="80" 
                                   Height="32" 
                                   VerticalContentAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- 配置管理 -->
                <GroupBox Header="配置管理" Padding="16" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="备份和恢复应用程序配置" 
                                 FontSize="12" 
                                 Foreground="Gray" 
                                 Margin="0,0,0,8"/>

                        <StackPanel Orientation="Horizontal">
                            <Button Content="导入配置" 
                                  Command="{Binding ImportConfigCommand}"
                                  Style="{StaticResource SecondaryButtonStyle}"
                                  Padding="12,8"/>
                            
                            <Button Content="导出配置" 
                                  Command="{Binding ExportConfigCommand}"
                                  Style="{StaticResource SecondaryButtonStyle}"
                                  Padding="12,8"/>
                            
                            <Button Content="重置为默认" 
                                  Command="{Binding ResetToDefaultCommand}"
                                  Style="{StaticResource DangerButtonStyle}"
                                  Padding="12,8"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- 关于信息 -->
                <GroupBox Header="关于信息" Padding="16">
                    <StackPanel>
                        <TextBlock Text="网络适配器助手" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <TextBlock Text="版本: 1.0.0" FontSize="12" Foreground="Gray" Margin="0,0,0,8"/>
                        <TextBlock Text="一个简单易用的网络适配器管理工具" FontSize="12" Foreground="Gray" Margin="0,0,0,8"/>
                        <TextBlock Text="© 2025 网络适配器助手" FontSize="12" Foreground="Gray"/>
                    </StackPanel>
                </GroupBox>

            </StackPanel>
        </ScrollViewer>

        <!-- 加载指示器 -->
        <Border Grid.Row="1" 
                Background="#80000000" 
                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" 
                           Width="200" 
                           Height="4" 
                           Margin="0,0,0,16"/>
                <TextBlock Text="正在处理..." 
                         Foreground="White" 
                         FontSize="14" 
                         HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- 状态栏 -->
        <Border Grid.Row="2" Background="#FFF0F0F0" BorderBrush="#FFCCCCCC" BorderThickness="0,1,0,0">
            <TextBlock Text="{Binding StatusMessage}" 
                     Margin="16,8" 
                     VerticalAlignment="Center"
                     FontSize="12"/>
        </Border>

        <!-- 按钮栏 -->
        <Border Grid.Row="3" Background="#FFF8F9FA" BorderBrush="#FFCCCCCC" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" 
                      HorizontalAlignment="Right" 
                      Margin="16,12">
                <Button Content="保存" 
                        Command="{Binding SaveCommand}"
                        Style="{StaticResource ModernButtonStyle}"
                        Width="80"/>
                <Button Content="取消" 
                        Command="{Binding CancelCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Width="80"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>